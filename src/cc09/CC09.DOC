      status = prnstatus() & 128;      write("printer busy -->");
   }

   while(1)   {
      ptr = msg;
      while( *ptr ) {
         writecharattr(*ptr, BOLD);     prnchar( *ptr );     ptr++;
      }
      prnchar( 10 ); prnchar( 13 );
   }
}



